<Application x:Class="CineworldAlerter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Cimbalino.Toolkit.Converters"
             xmlns:viewModels="using:CineworldAlerter.ViewModels">

    <Application.Resources>
        <ResourceDictionary>
            <viewModels:ViewModelLocator x:Key="Locator" />

            <converters:BooleanToVisibilityConverter x:Key="FalseToVisibleConverter"
                                                     InvertValue="True" />
            <converters:NegativeBooleanConverter x:Key="NegativeBooleanConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
